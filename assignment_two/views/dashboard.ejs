<h2 style="font-family: Arial, sans-serif; text-align: center; color: #333; margin-bottom: 30px;">Dashboard</h2>

<div style="max-width: 600px; margin: 0 auto 40px auto; font-family: Arial, sans-serif; background-color: #f9f9f9; padding: 20px; border-radius: 8px; box-shadow: 0 1px 4px rgba(0,0,0,0.1);">
  <p style="font-size: 16px; margin: 10px 0;"><strong>Total Products:</strong> <%= totalProducts %></p>
  <p style="font-size: 16px; margin: 10px 0;"><strong>Total Categories:</strong> <%= totalCategories %></p>
  <p style="font-size: 16px; margin: 10px 0;"><strong>Total Subcategories:</strong> <%= totalSubcategories %></p>
</div>

<table style="width: 90%; max-width: 1000px; margin: 0 auto; border-collapse: collapse; font-family: Arial, sans-serif;">
  <thead>
    <tr style="background-color: #e9ecef;">
      <th style="padding: 12px; border: 1px solid #ccc; text-align: left;">Category</th>
      <th style="padding: 12px; border: 1px solid #ccc; text-align: left;">Subcategory</th>
      <th style="padding: 12px; border: 1px solid #ccc; text-align: center;">Product Count</th>
    </tr>
  </thead>
  <tbody>
    <% breakdown.forEach(b => { %>
      <tr style="background-color: #fff;">
        <td style="padding: 10px; border: 1px solid #ddd;"><%= b._id.category %></td>
        <td style="padding: 10px; border: 1px solid #ddd;"><%= b._id.sub || 'No Subcategory' %></td>
        <td style="padding: 10px; border: 1px solid #ddd; text-align: center;"><%= b.count %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
