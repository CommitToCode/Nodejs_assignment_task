<h1 style="font-family: Arial, sans-serif; text-align: center; color: #333;">Products</h1>

<div style="text-align: center; margin-bottom: 20px;">
  <a href="/products/add" 
     style="padding: 10px 15px; background-color: #007bff; color: white; text-decoration: none; border-radius: 4px;">
    + Add Product
  </a>
</div>

<table style="width: 90%; max-width: 1000px; margin: 0 auto; border-collapse: collapse; font-family: Arial, sans-serif;">
  <thead>
    <tr style="background-color: #f2f2f2; text-align: left;">
      <th style="padding: 12px; border: 1px solid #ddd;">Name</th>
      <th style="padding: 12px; border: 1px solid #ddd;">Category</th>
      <th style="padding: 12px; border: 1px solid #ddd;">Subcategory</th>
      <th style="padding: 12px; border: 1px solid #ddd;">Price</th>
      <th style="padding: 12px; border: 1px solid #ddd;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(p => { %>
      <tr style="background-color: #fff; border-bottom: 1px solid #ddd;">
        <td style="padding: 10px; border: 1px solid #ddd;"><%= p.name %></td>
        <td style="padding: 10px; border: 1px solid #ddd;"><%= p.categoryName %></td>
        <td style="padding: 10px; border: 1px solid #ddd;"><%= p.subcategoryName %></td>
        <td style="padding: 10px; border: 1px solid #ddd;">$<%= p.price.toFixed(2) %></td>
        <td style="padding: 10px; border: 1px solid #ddd;">
          <a href="/products/edit/<%= p._id %>" 
             style="margin-right: 8px; color: #007bff; text-decoration: none;">Edit</a>
          <form method="post" action="/products/delete/<%= p._id %>" style="display: inline;">
            <button 
              type="submit" 
              style="background-color: #dc3545; color: white; border: none; padding: 5px 10px; border-radius: 3px; cursor: pointer;">
              Delete
            </button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
